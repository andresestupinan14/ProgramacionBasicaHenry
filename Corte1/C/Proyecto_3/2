#include <stdio.h>
#include <stdlib.h>

int main() {
	int unidad;
	float precio, total;
	char producto[40];
	
	printf("escriba el nombre del producto \n");
	scanf("%s",&producto);
	
	printf("escriba el valor del producto \n");
	scanf("%f",&precio);
	
	printf("escriba el numero de unidades \n");
	scanf("%d",&unidad);
	
	total= precio*unidad;
	
	printf("el valor total %.3f\n",total);
	printf("producto: %s\n",producto);
	printf("numero de productos: %d",unidad);

	return 0;
}
