#include<stdio.h>

int main(){
int C,i,j;
int cont=0;	
	
char resp;
do{

	printf("Escriba el numero de filas y columnas\n");
	scanf("%d",&C);
	
	int M[C][C];
	int posicion=0;

	
	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			printf("Escriba el valor de la matriz en la posicion %d\n",cont);
			scanf("%d",&M[i][j]);
			cont++;
		}
	}
	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			printf("|%d",M[i][j]);
		}
		printf("|\n");
	}
	
int cont=0;
int sumaP=0,sumaI=0;
float promP=0,promI=0;	

	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			if(M[i][j]%2!=0){
			
				cont++;
				sumaI=sumaI+M[i][j];
				promI=(float)sumaI/cont;
			}
		}
	}
	printf("La suma de los impares es %d\nLa media de los impares es %.2f\n",sumaI,promI);
	cont=0;
	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			if(M[i][j]%2==0){

				cont++;
				sumaP=sumaP+M[i][j];
				promP=(float)sumaP/cont;
			}
		}
	}
	printf("La suma de los pares es %d\nLa media de los pares es %.2f\n",sumaP,promP);
	int sumai=0,sumap=0;
	float promi,promp;

	cont=0;		
	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			posicion++;
			if(posicion%2==0){
				cont++;
				sumap=sumap+M[i][j];
				promp=(float)sumap/cont;
			}
		}
	}
	printf("La suma de los numeros en posiciones impares es %d\nLa media de los numeros en posiciones impares es %.2f",sumap,promp);
	cont=0;		
	posicion=0;
	for(i=0;i<C;i++){
		for(j=0;j<C;j++){
			posicion++;
			if(posicion%2!=0){
				cont++;
				sumai=sumai+M[i][j];
				promi=(float)sumai/cont;
			}
		}
	}
	printf("\nLa suma de los numeros en posiciones pares es %d\nLa media de numeros en las posiciones pares es %.2f",sumai,promi);	
	
	printf("\nRepetir programa (S/N)");
	scanf(" %c",&resp);
	
	}while(resp=='s'||resp=='S');

}
