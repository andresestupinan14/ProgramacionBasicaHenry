#include<stdio.h>

int main(){
	int C,F,i,j;
	float prom;	
	int cont=0;
	int sum=0;
	char resp;
	
	do{
	
		printf("Escriba el numero de filas\n");
		scanf("%d",&F);

		printf("Escriba el numero de columnas\n");
		scanf("%d",&C);
			
		int M[F][C];
	
		for(i=0;i<F;i++){
			for(j=0;j<C;j++){
				printf("Escriba el valor de la matriz\n");
				scanf("%d",&M[i][j]);
			}
		}

		for(i=0;i<F;i++){
			for(j=0;j<C;j++){	
				
				printf("|%d",M[i][j]);
			}
			printf("|\n");
		}
	int max;
			max=M[0][0];
		for(i=0;i<F;i++){
			for(j=0;j<C;j++){

				if(M[i][j]>max){
				max=M[i][j];
				
			
				}
			
			}	
				sum=sum+max;
				printf("El valor maximo es %d\n",max);
		}
	

	prom=(float)sum/F;
	printf("La media de todos los elementos de la matriz es %.1f",prom);
		
	
	printf("\nrepetir el programa\n");
	scanf(" %c",&resp);
	
	}while(resp=='s'|| resp=='S');
printf("\nprograma finalizado");
}
